# Simple Rule-Based Chatbot using if-else
# Author: Pavani
# Date: 2025-08-15

print("ğŸ¤– Hello! I am ChatBot 1.0. Type 'exit' to end the chat.")
print("-" * 50)

while True:
    user_input = input("You: ").lower().strip()  # Normalize input

    # Exit condition
    if user_input == "exit":
        print("ğŸ¤– ChatBot: Goodbye! Have a nice day! ğŸ˜Š")
        break

    # Basic responses
    elif "hello" in user_input or "hi" in user_input:
        print("ğŸ¤– ChatBot: Hi there! How can I help you today?")

    elif "how are you" in user_input:
        print("ğŸ¤– ChatBot: I'm just a bot, but I'm doing great! Thanks for asking.")

    elif "your name" in user_input:
        print("ğŸ¤– ChatBot: I am ChatBot 1.0, your friendly assistant.")

    elif "help" in user_input:
        print("ğŸ¤– ChatBot: Sure! I can answer simple questions. Try asking me about my name, how I am, or say hello.")

    elif "bye" in user_input:
        print("ğŸ¤– ChatBot: Bye! Take care. ğŸ‘‹")
        break

    else:
        print("ğŸ¤– ChatBot: Sorry, I didn't understand that. Can you try again?")
